{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			// "type": "shell",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "F:/mingw64/bin/g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "F:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: F:/mingw64/bin/g++.exe"
		}
	]
}